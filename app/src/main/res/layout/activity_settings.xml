<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="se.chalmers.projektgrupplp4.studentlivinggbg.activity.SettingsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/pushNotifications"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:text="Push-notiser" />

            <Button
                android:id="@+id/resetDatabase"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Återställ databas" />

            <Button
                android:id="@+id/removeSearchWatchers"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:text="Ta bort bevakningar" />

        </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
