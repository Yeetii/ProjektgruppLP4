<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.chalmers.projektgrupplp4.studentlivinggbg.ObjectActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@android:drawable/ic_menu_report_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:layout_conversion_absoluteX="5dp"
        tools:layout_conversion_absoluteY="5dp" />

    <TextView
        android:id="@+id/rent_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/type_lbl"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="12dp"
        android:text="Hyra:" />

    <TextView
        android:id="@+id/rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rent_lbl"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/type_lbl"
        android:text="TextView" />

    <TextView
        android:id="@+id/area_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rent_lbl"
        android:layout_below="@+id/rent_lbl"
        android:layout_marginTop="5dp"
        android:text="Boarea:" />

    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/area_lbl"
        android:layout_alignBottom="@+id/area_lbl"
        android:layout_alignStart="@+id/rent"
        android:text="TextView" />

    <TextView
        android:id="@+id/type_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/area_lbl"
        android:layout_marginTop="5dp"
        android:text="Bostadstyp:" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/type_lbl"
        android:layout_alignBottom="@+id/type_lbl"
        android:layout_alignStart="@+id/host"
        android:text="TextView" />

    <TextView
        android:id="@+id/host_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/type_lbl"
        android:layout_below="@+id/type_lbl"
        android:layout_marginTop="5dp"
        android:text="HyresvÃ¤rd:" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/host_lbl"
        android:layout_marginTop="5dp"
        android:text="Beskrivning" />

    <TextView
        android:id="@+id/host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/host_lbl"
        android:layout_alignBottom="@+id/host_lbl"
        android:layout_alignStart="@+id/area"
        android:text="TextView" />

</RelativeLayout>
