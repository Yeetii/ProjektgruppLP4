<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@android:drawable/ic_menu_report_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:layout_conversion_absoluteX="5dp"
        tools:layout_conversion_absoluteY="5dp" />

    <TextView
        android:id="@+id/rent_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyra:"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/type_lbl" />

    <TextView
        android:id="@+id/rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="TextView"
        android:layout_alignBaseline="@+id/rent_lbl"
        android:layout_alignBottom="@+id/rent_lbl"
        android:layout_toEndOf="@+id/rent_lbl" />

    <TextView
        android:id="@+id/area_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boarea:"
        android:layout_below="@+id/rent_lbl"
        android:layout_alignEnd="@+id/type_lbl"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/area_lbl"
        android:layout_alignBottom="@+id/area_lbl"
        android:layout_alignStart="@+id/rent"
        android:text="TextView" />

    <TextView
        android:id="@+id/type_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bostadstyp:"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/area_lbl"
        android:layout_alignEnd="@+id/host_lbl" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/type_lbl"
        android:layout_alignBottom="@+id/type_lbl"
        android:layout_alignStart="@+id/host"
        android:text="TextView" />

    <TextView
        android:id="@+id/date_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_alignStart="@+id/host"
        android:text="TextView"
        android:layout_alignEnd="@+id/host" />

    <TextView
        android:id="@+id/furnitured_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/furnitured"
        android:layout_alignBottom="@+id/furnitured"
        android:layout_alignEnd="@+id/date_lbl"
        android:layout_alignStart="@+id/date_lbl"
        android:text="TextView" />

    <TextView
        android:id="@+id/host_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyresvärd:"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/type_lbl"
        android:layout_alignEnd="@+id/date" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ansök senast:"
        android:layout_below="@+id/host_lbl"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/furnitured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Möblerad:"
        android:layout_below="@+id/date"
        android:layout_alignEnd="@+id/date"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/host_lbl"
        android:layout_alignBottom="@+id/host_lbl"
        android:layout_alignStart="@+id/area" />

    <TextView
        android:id="@+id/description_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/furnitured_lbl"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
